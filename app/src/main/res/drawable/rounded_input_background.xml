<!-- res/drawable/rounded_input_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Blue Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="@color/darkblue"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Layer 2: Inner Content with Black Background -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
