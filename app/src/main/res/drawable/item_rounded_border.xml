<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Outer border layer -->
        <shape android:shape="rectangle">
            <solid android:color="@color/darkblue"/>
            <corners android:radius="16dp"/> <!-- Set the radius for rounded corners -->
        </shape>
    </item>
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <!-- Inner content layer -->
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- The background color of your layout -->
            <corners android:radius="14dp"/> <!-- Adjust radius to be slightly less than the border -->
        </shape>
    </item>
</layer-list>
