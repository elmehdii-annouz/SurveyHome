<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fiberhome" />

    <Button
        android:id="@+id/createPlaqueButton"
        android:layout_width="198dp"
        android:layout_height="86dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#07166A"
        android:gravity="center"
        android:padding="12dp"
        android:text="CrÃ©er Plaque"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/plaqueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPlaqueButton"
        android:layout_marginTop="124dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/hiddenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaqueContainer"
        android:visibility="gone"
        android:padding="16dp"
        android:background="#E0E0E0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nouveau Layout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>
